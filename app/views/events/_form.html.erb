<% if @event.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id='form'>

  <%= form_for(@event, :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="control-group">
      <%= f.label :purpose, t('.purpose'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :purpose, :class => 'input-xlarge', :maxlength => 30, :placeholder => t('.purpose-eg') %>
      </div>
    </div>

    <% now = Time.now
       fixed_datetime = Time.local(now.year, now.month, now.day, now.hour, (now.min/10.0).ceil * 10, 59).strftime("%H:%M") %>

    <div class="control-group">
      <%= f.label :held_datetime, t('.held_datetime'), :class => 'control-label' %>
      <div class="controls">
        <div class="input-append">
          <input type="text" name="event[held_datetime]" id="event_held_datetime"
                 value=<%= fixed_datetime %> class="input-small" readonly="">
          <button class="btn" type="button" id="toggle-btn"><i class="icon-time"></i></button>
        </div>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :place, t('.place'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :place, :class => 'input-xlarge', :maxlength => 30, :placeholder => t('.place-eg') %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :msg, t('.msg'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :msg, :class => 'input-xlarge', :cols => 40, :rows => 4, :placeholder => t('.msg-eg') %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => 'btn btn-large btn-success' %>
      </div>
    </div>
  <% end %>

</div>

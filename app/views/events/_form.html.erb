<div id='form'>

  <%= form_for(@event) do |f| %>

    <% if @event.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :purpose, t('.purpose') %><br />
      <%= f.text_field :purpose, :size => 30, :maxlength => 30 %>
    </div>
<!--
    <div class="field">
      <%#= f.label :held_datetime, t('.held_datetime') %><br />
      <%#= f.text_field :held_datetime, :id => 'timepicker', :size => 8 %>
    </div>
-->
    <div class="field">
      <%= f.label :held_datetime, t('.held_datetime') %><br />
      <%= f.time_select :held_datetime, :default => Time.now + 30.minutes, :minute_step => 10 %>
    </div>    
    <div class="field">
      <%= f.label :place, t('.place') %><br />
      <%= f.text_field :place, :size => 30, :maxlength => 30 %>
    </div>
    <div class="field">
      <%= f.label :msg, t('.msg') %><br />
      <%= f.text_area :msg, :cols => 36, :rows => 4 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>

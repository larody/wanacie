<div id='main'>
  <h1><%= t 'search.title' %></h1>

  <%= form_tag(search_result_path, :method => 'get', :id => 'events_search', :remote => true) do %>
    <div class="field">
      <%= label_tag :place %>
      <%= text_field_tag(:place, '', {:size => 16}) %>
      <%= label_tag :purpose %>
      <%= text_field_tag(:purpose, '', {:size => 16}) %>
      <%= submit_tag '検索' %>

    <%# Area to display Progress %>
    <span id="progress"></span>
    </div>
  <% end %>

  <%# Area to display results %>
  <div id="result"><%= render :partial => 'search_result' %></div>

</div><!--End of main-->

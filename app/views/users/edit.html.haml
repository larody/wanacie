#main
  %h1= t '.title'
  = form_for(@user) do |f|
    - if @user.errors.any?
      #error_explanation
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      %br/
      = f.text_field :name, :readonly => true
    .field
      = f.label :password
      %br/
      = f.password_field :password
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    .field
      = f.label :email
      %br/
      = f.email_field :email
    .actions
      = f.submit
/ End of main
